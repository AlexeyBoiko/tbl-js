{
	"root":true,
    "plugins": [
        "import"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": [2, "tab", { "SwitchCase": 1 }],
        "no-tabs": 0,
        "space-before-function-paren": 0,
        "import/no-unused-modules": [1, {"unusedExports": true}]
    }
}
